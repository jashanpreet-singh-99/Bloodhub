<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ck.dev.students.bloodhub">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BloodHub.Splash">
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.BloodHub.Splash"></activity>
        <activity
            android:name=".activities.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.BloodHub.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.EmergencyRequestActivity" />
        <activity android:name=".activities.MainActivityOrg" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.ForgetPasswordActivity" />
        <activity android:name=".activities.RegisterOrgActivity" />
        <activity android:name=".activities.RegisterIndActivity" />
        <activity android:name=".activities.AddEmergencyRequestActivity" />
        <activity android:name=".activities.AddAppointmentActivity" />
        <activity android:name=".activities.ViewAppointmentsActivity" />
        <activity android:name=".activities.ProfileView" />
    </application>

</manifest>