<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/fab1">


        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:background="@color/transparent"
            android:contentDescription="@string/back_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textAllCaps="true"
            android:layout_centerInParent="true"
            android:padding="4dp"/>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="17dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="40dp"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:id="@+id/linear">

            <View android:id="@+id/top_rectangle"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="#a80b0b" />

            <ImageButton
                android:id="@+id/profile_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/round_btn"
                android:elevation="5dp"
                android:padding="20dp"
                android:layout_marginTop="-70dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/user_default"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/account_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/fab2"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textAllCaps="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="@string/prompt_ind_name"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        />

                    <TextView
                        android:id="@+id/name_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:textColor="@color/fab1"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="@string/prompt_email"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        />

                    <TextView
                        android:id="@+id/email_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:textColor="@color/fab1"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="@string/prompt_contact"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        />

                    <TextView
                        android:id="@+id/contact_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:textColor="@color/fab1"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="@string/prompt_uid"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        />

                    <TextView
                        android:id="@+id/uid_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:textColor="@color/fab1"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout android:id="@+id/textLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_info"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/terms_and_conditions_txt"
                    android:textColor="#3366BB"
                    android:clickable="true"
                    android:textSize="13sp"
                    android:layout_toEndOf="@+id/textView1"
                    android:focusable="true" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>